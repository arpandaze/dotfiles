#!/usr/bin/env -S bash -e

sudo reflector --save /etc/pacman.d/mirrorlist --country Nepal,India --protocol https --latest 5

if [[ $1 == "install" ]]; then
    command sudo pacman -S ${@:2}
fi
if [[ $1 == "remove" ]]; then
    appname=${@:2}

    if [ -z "$2" ]; then
      appname=$(pacman -Q | fzf | awk '{print $1;}')
    fi

    command sudo pacman -Rns $appname
fi
if [[ $1 == "uninstall" ]]; then
    command sudo pacman -Rns ${@:2}
fi
if [[ $1 == "update" ]]; then
    command sudo pacman -Syu
fi
if [[ $1 == "aurupdate" ]]; then
    command yay -Quq --aur | xargs -n 1 yay -S --noconfirm
fi
if [[ $1 == "list" ]]; then
    command pacman -Q
fi
