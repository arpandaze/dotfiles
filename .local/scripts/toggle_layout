#!/usr/bin/env -S bash -e

if [ "$(setxkbmap -print | grep colemak)" ]
then
  setxkbmap us
  DBUS_SESSION_BUS_ADDRESS=unix:path=/run/user/1000/bus /usr/bin/notify-send 'Switched Layout: Qwerty'
else
  setxkbmap us -variant colemak
  DBUS_SESSION_BUS_ADDRESS=unix:path=/run/user/1000/bus /usr/bin/notify-send 'Switched Layout: Colemak'
fi

